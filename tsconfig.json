{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
        "src/config.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}